<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        android:orientation="vertical"
        android:weightSum="10"
        tools:context=".FirstTimeForm.FirstTimeFormActivity">

        <!-- Skip the form -->

        <TextView
            android:id="@+id/textSkipFirstForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/skip_first_form_message"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- Head -->
        <TextView
            android:id="@+id/titleFirstForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="6dp"
            android:text="@string/select_interested_books_first_form_title"
            android:textColor="@android:color/black"
            android:textSize="34sp"
            android:textStyle="bold" />

        <!-- Description of this activity -->

        <TextView
            android:id="@+id/description_first_activity_form_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="@string/select_interest_books_first_form_text"
            android:textColor="@android:color/black" />

        <SearchView
            android:id="@+id/search_bar_interest_books"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:iconifiedByDefault="false"
            android:queryHint="Search books" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="4dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewInterestBooks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/next"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:paddingBottom="@dimen/margin_10dp"
                    app:backgroundTint="@color/cardview_light_background"
                    android:src="@drawable/ic_action_next"
                    android:paddingEnd="@dimen/margin_10dp"/>

            </RelativeLayout>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>