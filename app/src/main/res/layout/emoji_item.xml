<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="100dp"
    android:layout_height="100dp">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="4dp"
        android:layout_gravity="center_horizontal"
        card_view:cardBackgroundColor="@color/colorBlack">

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="@dimen/margin_10dp"
            card_view:cardBackgroundColor="@color/colorGrayCardBackground">

            <ImageButton
                android:id="@+id/emoji_image_view"
                android:backgroundTint="@color/colorGrayCardBackground"
                android:layout_width="@dimen/emoji_size"
                android:layout_height="@dimen/emoji_size"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/angry"/>

            <TextView
                android:id="@+id/emoji_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/emoji_text_size"
                android:text="@string/angry_emoji"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="@dimen/margin_5dp"/>

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</LinearLayout>